  cp $srcdir/vertex-theme-$_vertex_commit/common/metacity-1/thumbnail-light.png $pkgdir/usr/share/themes/Vertex-Maia-Light/metacity-1/thumbnail.png

  ## customization for whiskermenu
  cd $pkgdir/usr/share/themes/Vertex-Maia
  patch -p1 < $srcdir/whiskermenu-rabideau.patch
  
  ## add openbox themes
  cd $srcdir/vertex-manjaro-$_manjaro_commit
  cp -r Vertex-Maia{,-Dark} $pkgdir/usr/share/themes
