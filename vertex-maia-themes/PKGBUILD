	s/F3F3F5/F3F5F3/g;\
	s/fff\;/f9faf9\;/g;\
	s/FFF\"/F9FAF9\"/g;\
	s/FFFFFF/F9FAF9/g" gtkrc

  sed -i "s/232324/232423/g;\
	s/3C3E40/3C403E/g;\
	s/45474A/454A47/g;\
	s/F3F3F5/F3F5F3/g;\
	s/ythickness = 0/xthickness = 1\\n  ythickness = 1/" panel.rc

  cd ../../Vertex-Maia-Light/gtk-2.0
  sed -i "s/3c3c3e/3c3e3c/g;\
	s/4080fb/16a085/g;\
	s/454749/454947/g;\
	s/F3F3F5/F3F5F3/g;\
	s/fff\;/f9faf9\;/g;\
	s/FFF\"/F9FAF9\"/g;\
