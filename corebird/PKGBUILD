# Maintainer: Bernhard Landauer <oberon@manjaro.org>

pkgname=corebird
pkgver=1.5
pkgrel=1
pkgdesc="Native Gtk+ Twitter Client"
arch=('i686' 'x86_64')
license=('GPL')
url="https://github.com/baedert/corebird"
depends=('gettext'
    'glib2'
	'gst-libav'
	'gst-plugins-base'
	'gst-plugins-bad'
	'gst-plugins-good'
	'gspell'
#	'gstreamer'
	'gtk3'
#	'intltool'
	'libgee'
	'json-glib'
	'libsoup'
	'rest'
	'sqlite3')
makedepends=('automake'
	'vala')
source=(https://github.com/baedert/$pkgname/archive/$pkgver.tar.gz)
sha1sums=('a5319d433079ee3d851c0835433a9f9a081e5f7f')

build() {
  cd corebird-$pkgver
  # Add --disable-video here if you don't like the gstreamer deps
  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd corebird-$pkgver
  make DESTDIR=$pkgdir install
}
