# Maintainer: Bernhard Landauer <oberon@manjaro.org>
# Maintainer: Scott Furry <scott.wl.furry@gmail.com>

pkgname=guayadeque
pkgver=0.4.5
pkgrel=1
pkgdesc='Lightweight music player'
arch=('i686' 'x86_64')
url='http://guayadeque.org/'
license=('GPL3')
depends=('curl'
        'dbus'
        'glib2'
        'gst-plugins-base'
        'gst-plugins-good'
        'gst-plugins-bad'
        'gst-plugins-ugly'
        'gstreamer'
        'libgpod'
        'taglib'
        'wxsqlite3')
makedepends=('cmake')
optdepends=('gvfs: Support for external devices')
source=("https://github.com/anonbeat/${pkgname}/archive/v${pkgver}.tar.gz")
sha256sums=('a0c4eb9f0eb42e701880a1d196e847d68a3b443716a6240389fbfafef3f5d19c')

build() {
  cd ${pkgname}-${pkgver}
  ./buildt
  cmake . \
    -DCMAKE_CXX_STANDARD='11' \
    -DCMAKE_BUILD_TYPE='Release' \
    -DCMAKE_INSTALL_PREFIX='/usr' \
    -D_GUREVISION_:STRING="${pkgrel}"
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install
}
