#!/bin/bash

#Message for user

msg() {
ALL_OFF="\e[1;0m"
BOLD="\e[1;1m"
GREEN="${BOLD}\e[1;32m"
local mesg=$1; shift
printf "${GREEN}==>${ALL_OFF}${BOLD} ${mesg}${ALL_OFF}" "$@" >&2
}

echo
msg "Warning:
 -> Access to the AUR installed.
 -> Please open this link
 -> https://wiki.manjaro.org/index.php?title=AUR
 -> and read our wiki page carefully!
"

touch /.check-aur
